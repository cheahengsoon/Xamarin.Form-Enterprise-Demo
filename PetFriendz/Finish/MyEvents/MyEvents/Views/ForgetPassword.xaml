<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyEvents.Views.ForgetPassword" Title="Forget Password">
  <StackLayout Padding="20, 30, 20, 20" >
    <Entry x:Name="txtEmail" Placeholder="Email"/>
    <Button x:Name="btnRetrievePassword" Text="Reset Password" Clicked="Reset_Clicked"/>
    <ActivityIndicator x:Name="activityIndicator" IsRunning="False"></ActivityIndicator>
  </StackLayout>
</ContentPage>