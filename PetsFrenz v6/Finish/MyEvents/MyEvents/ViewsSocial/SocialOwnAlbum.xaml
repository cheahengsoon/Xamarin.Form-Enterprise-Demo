<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyEvents.ViewsSocial.SocialOwnAlbum"
             Title="Album" BackgroundColor="#C89C6B">
  <ContentPage.ToolbarItems >
    <ToolbarItem Name="Add Photo" Order="Primary" Icon="Camera.png" Priority="0" x:Name="btntakePhoto"/>
    <ToolbarItem Name="Pick Photo"   Order="Primary" Icon="Folder.png" Priority="1" x:Name="btnPickPhoto"/>
  </ContentPage.ToolbarItems >

  <StackLayout Padding="20, 30, 20, 20">
    <Label x:Name="txtnorecord"/>
    <Label x:Name="txtSocialName" IsVisible="False"/>
    <ListView x:Name="userListView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="500" RowHeight="200" BackgroundColor="White" SeparatorColor="#009688" IsPullToRefreshEnabled="True" >

    </ListView>


  </StackLayout>
</ContentPage>