<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyEvents.ViewsSocial.SocialFrenz"
             Title="Friends" BackgroundColor="#C89C6B">
  <ContentPage.ToolbarItems >

    <ToolbarItem Name="Friend"   Order="Primary" Icon="frienz.png" Priority="0"  Clicked="SocialFrenzSuggest_Clicked"/>


  </ContentPage.ToolbarItems>
  <StackLayout Padding="20, 30, 20, 20">
    <Label x:Name="txtnorecord"/>
    <Label x:Name="txtSocialName" IsVisible="False"/>
    <Label x:Name="txtSocialPetName" IsVisible="False"/>
    <ListView x:Name="userListView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="500" RowHeight="100" BackgroundColor="White" SeparatorColor="#009688" IsPullToRefreshEnabled="True" ItemTapped="SocialFrenzDetails_ItemTapped">

    </ListView>
    <!--<Button x:Name="reserveButton" Text="Add" IsVisible="true"></Button>
    <Button x:Name="cancelButton" Text="Cancel" IsVisible="true"></Button>-->

  </StackLayout>
</ContentPage>
