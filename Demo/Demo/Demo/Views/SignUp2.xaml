<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.Views.SignUp2">
  <StackLayout>
    <Entry x:Name="emailEntry" Placeholder="Email"/>
    <Entry x:Name="passwordEntry" Placeholder="Password"/>
    <Button x:Name="signUpButton" Text="SignUp" Clicked="OnSignUp_Clicked"></Button>
    <ActivityIndicator x:Name="activityIndicator" Color="White" IsRunning="False"></ActivityIndicator>
  </StackLayout>
</ContentPage>