<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.Views.Dashboard"
             Title="Dashboard">

  <ContentPage.ToolbarItems >
    <ToolbarItem Name="Profile" Order="Secondary" Priority="0" Clicked="ProfileDetails_Clicked"/>
    <ToolbarItem Name="Settings"   Order="Secondary" Priority="1" Clicked="Settings_Clicked" />
    <ToolbarItem Name="Log Out"   Order="Secondary" Priority="2" Clicked="LogOut_Clicked"/>
  </ContentPage.ToolbarItems>

  <StackLayout>
    <Label Text="Just Display!"/>
  </StackLayout>

 
</ContentPage >