<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.Views.Login">
  <StackLayout>
  <Entry x:Name="emailEntry" Placeholder="Email"/>
  <Entry x:Name="passwordEntry" Placeholder="Password"/>
  <ActivityIndicator x:Name="activityIndicator" IsRunning="False"></ActivityIndicator>
  <Button x:Name="signInButton" Text="SignIn" Clicked="SignIn_Clicked"/>
  </StackLayout>
</ContentPage>